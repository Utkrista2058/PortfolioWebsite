@{
    ViewData["Title"] = "Projects";
}

<div class="container">
    <h1 class="text-center">My Projects</h1>
    <div class="row" id="projects-container">
        <!-- Projects will be dynamically loaded here -->
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const projectsContainer = document.getElementById("projects-container");

            // Fetch repositories from GitHub API
            fetch("https://api.github.com/users/Utkrista2058/repos")
                .then(response => response.json())
                .then(data => {
                    data.forEach(repo => {
                        // Create a card for each repository
                        const card = `
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <h5 class="card-title">${repo.name}</h5>
                                        <p class="card-text">${repo.description || "No description available."}</p>
                                        <p><strong>Technologies:</strong> ${repo.language || "Not specified"}</p>
                                        <a href="${repo.html_url}" class="btn btn-primary">GitHub</a>
                                        ${repo.homepage ? `<a href="${repo.homepage}" class="btn btn-secondary">Live Demo</a>` : ""}
                                    </div>
                                </div>
                            </div>
                        `;
                        projectsContainer.innerHTML += card;
                    });
                })
                .catch(error => {
                    console.error("Error fetching repositories:", error);
                    projectsContainer.innerHTML = `<p class="text-center">Unable to load projects. Please try again later.</p>`;
                });
        });
    </script>
}